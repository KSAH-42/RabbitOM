<Window x:Class="RabbitOM.Sample.Client.Mjpeg.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RabbitOM.Sample.Client.Mjpeg"
        mc:Ignorable="d"
        Title="MJPEG TEST SAMPLE"
		Height="450" 
		Width="600" 
		Loaded="OnWindowLoaded" 
		Closing="OnWindowClosing"
		Background="Azure" 
        FocusManager.FocusedElement="{Binding ElementName=ImageGrid}"
		>
    
    <Window.CommandBindings>

        <CommandBinding Command="{x:Static local:MainWindow.FillImageCommand}" 
                        CanExecute="OnCanExecuteFillImage"
                        Executed="OnExecuteFillImage"
                        />

        <CommandBinding Command="{x:Static local:MainWindow.UniformImageCommand}" 
                        CanExecute="OnCanExecuteUniformImage"
                        Executed="OnExecuteUniformImage"
                        />

        <CommandBinding Command="{x:Static local:MainWindow.ConfigureResolutionCommand}" 
                        CanExecute="OnCanExecuteConfigureResolution"
                        Executed="OnExecuteConfigureResolution"
                        />

    </Window.CommandBindings>
    
	<Grid Margin="1,1,1,1" Background="White" >

        <TextBlock Margin="7,5,0,0"
                   HorizontalAlignment="Left" 
                   VerticalAlignment="Top" 
                   Width="94" 
                   TextAlignment="Right"
                   TextWrapping="Wrap" 
                   Text="MJPEG RTSP URI :" 
                   />

        <ComboBox x:Name="_uris" 
                  Margin="108,3,79,0" 
                  VerticalAlignment="Top" 
                  SelectedIndex="0" 
                  Height="22" 
                  IsEditable="True" 
                  >
            
            <ComboBoxItem Content="rtsp://admin:camera123@127.0.0.1:554/screenlive"/>
            <ComboBoxItem Content="rtsp://admin:camera123@127.0.0.1:554/city1.mp4"/>
			<ComboBoxItem Content="rtsp://admin:camera123@127.0.0.1:554/city2.mp4"/>
			<ComboBoxItem Content="rtsp://admin:camera123@127.0.0.1:554/city3.mp4"/>
			<ComboBoxItem Content="rtsp://admin:camera123@127.0.0.1:554/city4.mp4"/>
			<ComboBoxItem Content="rtsp://admin:camera123@127.0.0.1:554/city5.mp4"/>
			<ComboBoxItem Content="rtsp://admin:camera123@127.0.0.1:554/city6.mp4"/>
			<ComboBoxItem Content="rtsp://admin:camera123@127.0.0.1:554/city7.mp4"/>
			<ComboBoxItem Content="rtsp://admin:camera123@127.0.0.1:554/toy.mp4"/>
			<ComboBoxItem Content="rtsp://admin:camera123@127.0.0.1:554/movie.mp4"/>
			<ComboBoxItem Content="rtsp://admin:camera123@127.0.0.1:554/earth.avi"/>
			<ComboBoxItem Content="rtsp://admin:camera123@127.0.0.1:554/test2.mp4"/>
			<ComboBoxItem Content="rtsp://admin:camera123@127.0.0.1:554/fruit.mp4"/>
			<ComboBoxItem Content="rtsp://admin:camera123@127.0.0.1/butterfly.mpg" />
			<ComboBoxItem Content="rtsp://admin:camera123@127.0.0.1/park.mp4" />
			<ComboBoxItem Content="rtsp://admin:camera123@127.0.0.1/park2.mp4" />
			<ComboBoxItem Content="rtsp://admin:camera123@127.0.0.1/forest.mp4" />
			<ComboBoxItem Content="rtsp://admin:camera123@127.0.0.1/freeway.mp4" />
            <ComboBoxItem Content="rtsp://admin:camera123@127.0.0.1/valentin.mp4" />
            <ComboBoxItem Content="rtsp://admin:camera123@127.0.0.1/lake.mpg" />
            <ComboBoxItem Content="rtsp://admin:camera123@127.0.0.1/water.mpg" />
            <ComboBoxItem Content="rtsp://admin:camera123@127.0.0.1/video.mp4" />
            <ComboBoxItem Content="rtsp://admin:camera123@127.0.0.1/video4K.mp4" />
			<ComboBoxItem Content="rtsp://admin:camera123@192.168.1.64:554/Streaming/Channels/101"/>
			<ComboBoxItem Content="rtsp://admin:camera123@192.168.1.64:554/Streaming/Channels/102"/>
			<ComboBoxItem Content="rtsp://admin:camera123@192.168.1.64:554/Streaming/Channels/103"/>
            
		</ComboBox>

        <Button x:Name="_controlButton" 
                Margin="0,3,2,0" 
                HorizontalAlignment="Right" 
                VerticalAlignment="Top" 
                Width="74" 
                Height="22"
                Content="Play" 
                Click="OnButtonControlClick" 
                />

        <Grid x:Name="ImageGrid"
              Margin="1,29,1,1" 
              Background="Black" 
              >
            
            <Grid.ContextMenu>
              
                <ContextMenu>
                
                    <MenuItem Header="Stretch"  
                              Command="{x:Static local:MainWindow.FillImageCommand}" 
                              />
                    
                    <MenuItem Header="Normal" 
                              Command="{x:Static local:MainWindow.UniformImageCommand}" 
                              />
                    
                    <Separator/>
                    
                    <MenuItem Header="Resolution fallback" 
                              Command="{x:Static local:MainWindow.ConfigureResolutionCommand}" 
                              />
                    
                </ContextMenu>
            
            </Grid.ContextMenu>
            
            <TextBlock x:Name="_textBlockInfo" 
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center" 
                       FontSize="20" 
                       Foreground="White" 
                       />
            
            <Image x:Name="_image"  
                   Margin="0,0,0,0" 
                   Stretch="Uniform" 
                   SnapsToDevicePixels="True" 
                   UseLayoutRounding="True" 
                   />
            
        </Grid>
        
    </Grid>
    
</Window>
