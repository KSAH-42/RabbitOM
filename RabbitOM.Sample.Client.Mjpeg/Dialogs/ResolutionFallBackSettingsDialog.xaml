<Window x:Class="RabbitOM.Sample.Client.Mjpeg.Dialogs.ResolutionFallBackSettingsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RabbitOM.Sample.Client.Mjpeg.Dialogs"
        xmlns:converters="clr-namespace:RabbitOM.Sample.Client.Mjpeg.Converters"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="Resolution fallback settings" 
        Height="200" 
        Width="305"
        WindowStartupLocation="CenterOwner"
        WindowStyle="ToolWindow"
        ResizeMode="NoResize"
        >

    <Window.Resources>

        <converters:IntValueConverter x:Key="IntValueConverter" />
        
        <x:Array x:Key="ResolutionWidthValues" Type="system:String">
            <system:String>800</system:String>
            <system:String>1280</system:String>
            <system:String>1920</system:String>
            <system:String>2040</system:String>
            <system:String>2560</system:String>
            <system:String>2592</system:String>
            <system:String>3840</system:String>
            <system:String>4000</system:String>
        </x:Array>

        <x:Array x:Key="ResolutionHeightValues" Type="system:String">
            <system:String>600</system:String>
            <system:String>720</system:String>
            <system:String>1080</system:String>
            <system:String>2040</system:String>
            <system:String>1440</system:String>
            <system:String>1944</system:String>
            <system:String>2160</system:String>
            <system:String>3000</system:String>
        </x:Array>

    </Window.Resources>
    
    <Window.CommandBindings>

        <CommandBinding Command="{x:Static local:ResolutionFallBackSettingsDialog.AcceptButtonCommand}" 
                        CanExecute="OnCanAcceptSettings" 
                        Executed="OnAcceptSettings" 
                        />

    </Window.CommandBindings>

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="*" />
            <RowDefinition Height="35" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Width="auto" >
            
            <TextBlock Margin="1,5,1,0"
                       Text="Change resolution settings only if the rtp stream does not contains theses values"
                       FontSize="8"
                       />
        </Grid>
        
        <Grid Grid.Row="1">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="60"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">

                <TextBlock Margin="0,20,2,2"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           TextAlignment="Right"
                           Width="50"
                           Text="Width :"
                           />
                
                <TextBlock Margin="0,50,2,2"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           TextAlignment="Right"
                           Width="50"
                           Text="Height :"
                           />

            </Grid>

            <Grid Grid.Column="1">

                <ComboBox Margin="0,20,10,0" 
                          VerticalAlignment="Top" 
                          IsEditable="True"
                          Text="{Binding Path=WidthResolution,UpdateSourceTrigger=PropertyChanged, Mode=TwoWay,Converter={StaticResource IntValueConverter} , RelativeSource={RelativeSource AncestorType={x:Type Window}}}" 
                          ItemsSource="{StaticResource ResolutionWidthValues}"
                          />

                <ComboBox Margin="0,50,10,0"
                          VerticalAlignment="Top" 
                          IsEditable="True"
                          Text="{Binding Path=HeightResolution,UpdateSourceTrigger=PropertyChanged, Mode=TwoWay, Converter={StaticResource IntValueConverter} , RelativeSource={RelativeSource AncestorType={x:Type Window}} }" 
                          ItemsSource="{StaticResource ResolutionHeightValues}"
                          />

                <CheckBox Margin="0,79,0,0" 
                          HorizontalAlignment="Left" 
                          VerticalAlignment="Top"
                          Content="Replace resolution" 
                          IsThreeState="False"
                          IsChecked="{Binding Path=ReplaceResolution,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay, RelativeSource={RelativeSource AncestorType={x:Type Window}} }"
                          />

            </Grid>
            
        </Grid>

        <Grid Grid.Row="2">

            <Button Margin="0,0,95,10" 
                    VerticalAlignment="Bottom" 
                    HorizontalAlignment="Right"
                    Width="80"
                    Height="20"
                    IsCancel="True" 
                    Content="Cancel"
                    />

            <Button Margin="60,0,10,10" 
                    VerticalAlignment="Bottom" 
                    HorizontalAlignment="Right"
                    Width="80"
                    Height="20"
                    IsCancel="False"
                    IsDefault="True"
                    Content="Ok"
                    Command="{x:Static local:ResolutionFallBackSettingsDialog.AcceptButtonCommand}"
                    />

        </Grid>
        
    </Grid>
    
</Window>
