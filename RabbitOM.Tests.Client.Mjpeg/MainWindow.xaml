        <Grid Margin="1,29,1,1" Background="Black">
            <Grid.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Uniform" Click="OnContextMenuImageUniform" />
                    <MenuItem Header="Fill"  Click="OnContextMenuImageFill" />
                </ContextMenu>
            </Grid.ContextMenu>
            <TextBlock x:Name="_textBlockInfo" FontSize="20" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center" />
