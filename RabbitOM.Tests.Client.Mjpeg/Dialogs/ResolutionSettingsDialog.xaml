<Window x:Class="RabbitOM.Tests.Client.Mjpeg.Dialogs.ResolutionSettingsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RabbitOM.Tests.Client.Mjpeg.Dialogs"
        mc:Ignorable="d"
        Title="Resolution Settings" 
        Height="180" 
        Width="270"
        WindowStartupLocation="CenterOwner"
        WindowStyle="ToolWindow"
        ResizeMode="NoResize"
        >
    <Window.CommandBindings>

        <CommandBinding Command="{x:Static local:ResolutionSettingsDialog.AcceptButtonCommand}" CanExecute="OnCanAcceptSettings" Executed="OnAcceptSettings" />

    </Window.CommandBindings>

    <Grid>
        <TextBlock Margin="0,20,2,2"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   TextAlignment="Right"
                   Width="50"
                   Text="Width :"
                   />

        <TextBox Margin="55,20,10,0" 
                 VerticalAlignment="Top" 
                 TextWrapping="Wrap"
                 Text="{Binding Path=ResolutionWidth,UpdateSourceTrigger=PropertyChanged, Mode=TwoWay, RelativeSource={RelativeSource AncestorType={x:Type Window}}}" 
                 />

        <TextBlock Margin="0,50,2,2"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   TextAlignment="Right"
                   Width="50"
                   Text="Height :"
                   />

        <TextBox  Margin="56,50,10,0"
                  VerticalAlignment="Top" 
                  TextWrapping="Wrap"
                  Text="{Binding Path=ResolutionHeight,UpdateSourceTrigger=PropertyChanged, Mode=TwoWay, RelativeSource={RelativeSource AncestorType={x:Type Window}} }" 
                  />

        <CheckBox Margin="55,79,0,0" 
                  HorizontalAlignment="Left" 
                  VerticalAlignment="Top"
                  Content="Replace" 
                  IsThreeState="False"
                  IsChecked="{Binding Path=ReplaceResolution,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay, RelativeSource={RelativeSource AncestorType={x:Type Window}} }"
                  />

        <Button Margin="0,0,100,10" 
                VerticalAlignment="Bottom" 
                HorizontalAlignment="Right"
                Width="80"
                Height="20"
                IsCancel="True" 
                Content="Cancel"
                />

        <Button Margin="60,0,10,10" 
                VerticalAlignment="Bottom" 
                HorizontalAlignment="Right"
                Width="80"
                Height="20"
                IsCancel="False"
                IsDefault="True"
                Content="Ok"
                Command="{x:Static local:ResolutionSettingsDialog.AcceptButtonCommand}"
                />
    </Grid>
</Window>
