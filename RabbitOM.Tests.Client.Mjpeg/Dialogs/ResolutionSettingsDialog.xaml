<Window x:Class="RabbitOM.Tests.Client.Mjpeg.Dialogs.ResolutionSettingsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RabbitOM.Tests.Client.Mjpeg.Dialogs"
        xmlns:converters="clr-namespace:RabbitOM.Tests.Client.Mjpeg.Converters"
        mc:Ignorable="d"
        Title="Resolution Settings" 
        Height="180" 
        Width="270"
        WindowStartupLocation="CenterOwner"
        WindowStyle="ToolWindow"
        ResizeMode="NoResize"
        >

    <Window.Resources>

        <converters:IntValueConverter x:Key="IntValueConverter" />

    </Window.Resources>
    
    <Window.CommandBindings>

        <CommandBinding Command="{x:Static local:ResolutionSettingsDialog.AcceptButtonCommand}" 
                        CanExecute="OnCanAcceptSettings" 
                        Executed="OnAcceptSettings" 
                        />

    </Window.CommandBindings>

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="35" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="70"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">

                <TextBlock Margin="0,20,2,2"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           TextAlignment="Right"
                           Width="50"
                           Text="Width :"
                           />
                
                <TextBlock Margin="0,50,2,2"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           TextAlignment="Right"
                           Width="50"
                           Text="Height :"
                           />

            </Grid>

            <Grid Grid.Column="1">

                <TextBox Margin="0,20,10,0" 
                         VerticalAlignment="Top" 
                         TextWrapping="Wrap"
                         Text="{Binding Path=ResolutionWidth,UpdateSourceTrigger=PropertyChanged, Mode=TwoWay,Converter={StaticResource IntValueConverter} , RelativeSource={RelativeSource AncestorType={x:Type Window}}}" 
                         />

                <TextBox  Margin="0,50,10,0"
                          VerticalAlignment="Top" 
                          TextWrapping="Wrap"
                          Text="{Binding Path=ResolutionHeight,UpdateSourceTrigger=PropertyChanged, Mode=TwoWay, Converter={StaticResource IntValueConverter} , RelativeSource={RelativeSource AncestorType={x:Type Window}} }" 
                          />

                <CheckBox Margin="0,79,0,0" 
                          HorizontalAlignment="Left" 
                          VerticalAlignment="Top"
                          Content="Replace" 
                          IsThreeState="False"
                          IsChecked="{Binding Path=ReplaceResolution,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay, RelativeSource={RelativeSource AncestorType={x:Type Window}} }"
                          />

            </Grid>
            
        </Grid>

        <Grid Grid.Row="1">

            <Button Margin="0,0,100,10" 
                    VerticalAlignment="Bottom" 
                    HorizontalAlignment="Right"
                    Width="80"
                    Height="20"
                    IsCancel="True" 
                    Content="Cancel"
                    />

            <Button Margin="60,0,10,10" 
                    VerticalAlignment="Bottom" 
                    HorizontalAlignment="Right"
                    Width="80"
                    Height="20"
                    IsCancel="False"
                    IsDefault="True"
                    Content="Ok"
                    Command="{x:Static local:ResolutionSettingsDialog.AcceptButtonCommand}"
                    />

        </Grid>
        
    </Grid>
    
</Window>
